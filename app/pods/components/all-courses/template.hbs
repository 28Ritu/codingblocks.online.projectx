<div class="container">
  <h2 class="t-align-c mt-5 mb-5">
    All Courses
  </h2>
  <CardGrid class="row justify-content-center" as |card|>
    {{#each courses as |course index|}}
      <div class="c-layout-card col-md-6 col-lg-4 pr-md-0">
        {{course-card 
          course=course 
          index=index 
          showPopUp=(eq index card.poppedIndex) 
          onChangePopped=card.changePoppedCard
          organization=org}}
      </div>
    {{/each}}
  </CardGrid>
  
  <div class="row justify-content-center">
    {{#if fetchAllCourses.isRunning}}
      <LoadingCardClassroom class="w-100"/>
    {{else if (lt limitandoffset count)}}
      <span id="load-more"></span>
    {{/if}}
  </div>
</div>