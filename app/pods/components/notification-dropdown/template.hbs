<div class="notify-icon" onclick={{action toggleAction}} id="notification-icon">
	{{#if unreadNotifications}}
		<span class="notify-dot new"></span>
	{{/if}}
	<img src="https://cb-thumbnails.s3.ap-south-1.amazonaws.com/notification.svg" alt="">
</div>
<div class="pop-up dropdown-ul border-card pt-2 c-notification no-scrollbar {{if showDialog 'display-block'}}" id="notification-box" 
style="height: 500px; overflow-y: scroll;">
	{{#if notifications.length}}
		{{#each notifications as |notification|}}
		<a href="{{notification.url}}" target="_blank">
			<div class="dropdown-li row">
				<div class="notify-type col-2 pt-3 justify-content-center align-items-center">
					<div class="notify-icon">
						{{#if notification.isUnread}}
						<span class="notify-dot new"></span>
						{{/if}}
						<img src="/images/announcement.svg" alt="">
					</div>
				</div>
				<div class="notify-text col-10">{{markdown-to-html notification.message}}</div>
			</div>
		</a>
		{{/each}}
	{{else}}
	<div class="dropdown-li row">
		<div class="notify-type col-2 justify-content-center align-items-center">
			<div class="notify-icon">
					<span class="notify-dot new"></span>
				<img src="/images/announcement.svg" alt="">
			</div>
		</div>
		<div class="notify-text col-10">You have no notifications! Check out our
		fabulous courses below, and gain access to hundreds of hours of high
		quality video lessons!</div>
	</div>
	{{/if}}
</div>
