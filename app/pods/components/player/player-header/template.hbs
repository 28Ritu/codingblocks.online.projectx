<div class="timeline__top-bar row no-gutters align-items-center justify-content-between" style="height: 100px">
  <div class="col-3">
    <div class="row no-gutters justify-content-between align-items-center">
      
      <div class="flex-1">
        <div class="font-md bold text-ellipses video-title">{{markdown-to-html content.title}}</div>
      </div>
      <div class="col-1" id="bookmark-content">
        <button href="#" class="white" onclick={{action "toggleBookmark"}}>
          {{#if content.bookmark}}
            <i class="fas fa-bookmark fa-lg"></i>
          {{else}}
            <i class="far fa-bookmark fa-lg"></i>
          {{/if}}
        </button>
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-3 pr-4" id="content-searchbox">
    <CourseSearchBox @run={{run}} />
  </div>
  <div class="col-4 px-4">
    <div class="d-flex align-items-center justify-content-between">
      <span class="font-normal mr-3">Course Progress</span>
      <div class="flex-1">
        <progress value="{{progressPercent}}" max="100" class="progress-orange" /> 
      </div>
      <span class="bold ml-3">{{progressPercent}}%</span>
    </div>
  </div>
  <LinkTo
    @route="classroom.timeline"
    @models={{array run.course.id run.id}}
    class="button-solid button-orange">
    Exit Class  
  </LinkTo>
</div>
