<div class="classroom-container row">
  <div class="classroom-header-box col-md-6 col-sm-12 col-xs-12">
    <div class="classroom-header row">
      <div class="classroom-image col-2 col-md-2">
        <img src="/images/c++">
      </div>
      <div class="classroom-text col-10 col-md-10">
        {{run.course.title}}
        <div class="rating mob">
          {{#rating-stars course=run.course}} {{/rating-stars}}
        </div>
      </div>
    </div>
    <p class="classroom-para">
      {{run.course.summary}}
    </p>
    <div class="rating">
      {{#rating-stars course=run.course}} {{/rating-stars}}
    </div>
  </div>
  <div class="course-progress-box col-md-6 col-sm-12 col-xs-12">
    <div class="course-progress-heading row no-gutters">
      <div class="heading col-4 col-md-6 align-self-center">Course Progress</div>
      <div class="divider-h col-6 align-self-center"></div>
    </div>

    <div class="progress row no-gutters justify-content-around align-items-center">
      <div class="progress-circle col-3 col-md-3">
        <div class="status-circle">
          <div class="circle-back"></div>
          <div class="circle-front d-flex flex-column justify-content-center">
            <p class="progress-text">{{percentage run.course.completedContents run.course.totalContents}} %</p>
          </div>
        </div>
      </div>
      <div class="course-progress-detail col-5 col-md-9">
        <p class="heading-mob">Course Progress</p>
        <p class="lectures-completed">{{run.course.completedContents}} of {{run.course.totalContents}} Content completed</p>
        <p class="reset-progress" {{action 'resetProgress'}}>Reset Progress</p>
      </div>
      <div class="offset-md-5 col-4 col-md-5">
        <div class="button-solid">
          {{#link-to 'attempt' run.topRunAttempt.id tagName="button"}} Resume Learning {{/link-to}}
        </div>
      </div>
    </div>



  </div>
</div>
<div class="tab-nav">
  <div class="tab-list">
    {{link-to 'Overview' 'classroom.timeline.overview' class="tab-items" tagName="div"}} {{link-to 'Course Content' 'classroom.timeline.contents'
    class="tab-items" tagName="div"}} {{link-to 'Announcements' 'classroom.timeline.announcements' class="tab-items" tagName="div"}}
    {{link-to 'Solve Your Doubts' 'classroom.timeline.doubts' class="tab-items" tagName="div"}}
  </div>
</div>
{{liquid-outlet}}